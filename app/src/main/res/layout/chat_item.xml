<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_lay"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/date"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11/01/2002"
        style="@style/desc"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/_6sdp"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/curved_border_5"
        android:backgroundTint="@color/color_selected"
        />
   <LinearLayout
       android:visibility="gone"
       android:id="@+id/chat_you"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/chat_right"
       android:paddingLeft="@dimen/_15sdp"
       android:paddingRight="@dimen/_5sdp"
       android:paddingVertical="@dimen/_5sdp"
       android:layout_marginRight="@dimen/_35sdp"
       android:orientation="vertical">

       <LinearLayout
           android:id="@+id/lay_replay_of_you"
           android:visibility="gone"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/rounded_card"
           android:gravity="start"
           android:backgroundTint="#F4F7F8"
           android:layout_gravity="start"
           android:layout_marginRight="@dimen/_5sdp"
           android:orientation="horizontal"
           >
           <View
               android:layout_width="@dimen/_5sdp"
               android:layout_height="match_parent"
               android:background="@drawable/bar"
               />
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/replay_sender_you"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   style="@style/desc"
                   android:textColor="#3949AB"
                   android:textStyle="bold"
                   android:paddingHorizontal="@dimen/_5sdp"
                   android:maxLines="3"
                   android:text="You"
                   />
               <TextView
                   android:id="@+id/replay_text_you"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   style="@style/desc"
                   android:textColor="#3D3A3A"
                   android:paddingHorizontal="@dimen/_5sdp"
                   android:maxLines="3"
                   android:paddingBottom="@dimen/_2sdp"
                   android:text="Replayof"
                   />
               <LinearLayout
                   android:visibility="gone"
                   android:id="@+id/lay_replay_doc_you"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:padding="@dimen/_5sdp"
                   android:layout_marginTop="@dimen/_2sdp"
                   android:background="#BED9F4"

                   >
                   <ImageView
                       android:visibility="visible"
                       android:id="@+id/iv_replay_doc_you"
                       android:layout_width="@dimen/_20sdp"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:layout_gravity="center_horizontal"
                       android:gravity="center_horizontal"
                       android:src="@drawable/ic_files"
                       />
                   <TextView
                       android:visibility="visible"
                       android:id="@+id/iv_replay_attachment_title_you"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="file_name fbbfgbbbbbbbbbbbbb"
                       android:layout_marginStart="@dimen/_5sdp"
                       android:maxLength="20"
                       android:layout_gravity="center_vertical"
                       android:gravity="center_vertical"
                       android:layout_marginRight="@dimen/_10sdp"
                       android:autoLink="web"
                       style="@style/desc"
                       android:textColor="#3D3A3A"
                       />
               </LinearLayout>
           </LinearLayout>



       </LinearLayout>

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal"
           android:layout_marginRight="@dimen/_5sdp"
           android:layout_gravity="center_horizontal"
           >



           <ImageView
               android:visibility="gone"
               android:id="@+id/iv_attachment_you"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:adjustViewBounds="true"
               android:layout_gravity="center_horizontal"
               android:gravity="center_horizontal"
               android:src="@drawable/ic_files"
               />
           <ImageView
               android:visibility="gone"
               android:id="@+id/btn_play_you"
               android:layout_width="@dimen/_40sdp"
               android:layout_height="@dimen/_40sdp"
               android:layout_centerInParent="true"
               android:src="@drawable/ic_play"
               />
       </RelativeLayout>


       <LinearLayout
           android:visibility="gone"
           android:id="@+id/lay_doc_you"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
          android:orientation="horizontal"
           android:padding="@dimen/_5sdp"
           android:background="@drawable/rounded_card"
           android:backgroundTint="#BED9F4"
           >
           <ImageView
               android:visibility="visible"
               android:id="@+id/iv_doc_you"
               android:layout_width="@dimen/_20sdp"
               android:layout_height="wrap_content"
               android:adjustViewBounds="true"
               android:layout_gravity="center_vertical"
               android:gravity="center_horizontal"
               android:src="@drawable/ic_files"
               />
           <TextView
               android:visibility="visible"
               android:id="@+id/iv_attachment_title_you"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="file_name"
               android:layout_marginStart="@dimen/_5sdp"
               android:layout_gravity="center_vertical"
               android:gravity="center_vertical"
               android:maxWidth="@dimen/_145sdp"
               android:layout_marginRight="@dimen/_10sdp"
               android:autoLink="web"
               style="@style/desc"
               android:textColor="#3D3A3A"
               />
           <ImageView
               android:visibility="visible"
               android:id="@+id/iv_download_you"
               android:layout_width="@dimen/_25sdp"
               android:layout_height="wrap_content"
               android:adjustViewBounds="true"
               android:layout_gravity="center"
               android:layout_marginStart="@dimen/_5sdp"
               android:gravity="center"
               android:src="@drawable/ic_download"
               app:tint="@color/white" />

           <ProgressBar
               android:progressTint="@color/thim_color"
               android:visibility="gone"
               android:id="@+id/iv_download_progress_yoy"
               android:layout_width="@dimen/_25sdp"
               android:layout_height="@dimen/_25sdp"
               android:adjustViewBounds="true"
               android:progress="0"
               android:layout_gravity="center"
               android:layout_marginStart="@dimen/_5sdp"
               android:gravity="center"
               style="?android:attr/progressBarStyleHorizontal"
               android:background="@drawable/circular_shape"
               android:indeterminate="false"
               android:progressDrawable="@drawable/circular_progress_bar"
               android:textAlignment="center"
               />
       </LinearLayout>
       <TextView
           android:id="@+id/message_you"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:autoLink="all"
           android:layout_gravity="center_horizontal"
           android:gravity="center_horizontal"
           android:text=""
          style="@style/desc"
           android:textColor="#3D3A3A"
           />
       <TextView
           android:id="@+id/time_you"
           android:layout_marginTop="@dimen/_2sdp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="22:40 AM"
           style="@style/desc"
           android:textColor="@color/gray_white"
           />
   </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/chat_me"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_left"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_35sdp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lay_replay_of_me"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card"
            android:gravity="start"
            android:backgroundTint="#F4F7F8"
            android:layout_gravity="start"
            android:minWidth="@dimen/_150sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="@dimen/_5sdp"
                android:layout_height="match_parent"
                android:background="@drawable/bar"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/replay_sender_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/desc"
                    android:textColor="#3949AB"
                    android:textStyle="bold"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:maxLines="3"
                    android:text="You"
                    />
                <TextView
                    android:id="@+id/replay_text_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/desc"
                    android:textColor="#3D3A3A"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:maxLines="3"
                    android:text="Replayof"
                    />
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lay_replay_doc_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="#BED9F4"

                    >
                    <ImageView
                        android:visibility="visible"
                        android:id="@+id/iv_replay_doc_me"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:src="@drawable/ic_files"
                        />
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/iv_replay_attachment_title_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="file_name fbbfgbbbbbbbbbbbbb"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:maxLength="20"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:autoLink="web"
                        style="@style/desc"
                        android:textColor="#3D3A3A"
                        />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_attachment_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_files"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/btn_play"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play"
                />
        </RelativeLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lay_doc_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/rounded_card"
            android:backgroundTint="#BED9F4"
            >
            <ImageView
                android:visibility="visible"
                android:id="@+id/iv_doc_me"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:src="@drawable/ic_files"
                />
            <TextView
                android:visibility="visible"
                android:id="@+id/iv_attachment_title_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/_140sdp"
                android:text="file_name"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/_10sdp"
                android:autoLink="web"
                style="@style/desc"
                android:textColor="#3D3A3A"
                />
            <ImageView
                android:visibility="visible"
                android:id="@+id/iv_download_me"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center"
                android:src="@drawable/ic_download"
                app:tint="@color/white" />
            <ProgressBar
                android:progressTint="@color/thim_color"
                android:visibility="gone"
                android:id="@+id/iv_download_progress_me"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:adjustViewBounds="true"
                android:progress="0"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center"
                style="?android:attr/progressBarStyleHorizontal"
                android:background="@drawable/circular_shape"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:textAlignment="center"
               />
        </LinearLayout>
        <TextView
            android:id="@+id/message_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center"
            android:paddingEnd="@dimen/_10sdp"
            android:autoLink="all"
            android:gravity="center_horizontal"
            style="@style/desc"
            android:textColor="#3D3A3A"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/time_me"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/01.2002"
                android:layout_marginRight="@dimen/_1sdp"
                style="@style/desc"
                android:textColor="@color/gray_white"
                />
            <ImageView
                android:id="@+id/status_me"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_1sdp"
                android:src="@drawable/ic_check"
                android:paddingEnd="@dimen/_5sdp"
                />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>